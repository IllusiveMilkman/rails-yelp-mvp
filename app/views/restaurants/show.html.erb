 <nav class="navbar navbar-light bg-light mb-4">
  <a class="navbar-brand">Yelp</a>
  <%= link_to 'Add a Review', new_restaurant_review_path(@restaurant), :class => 'nav-link' %>
  <%= link_to 'Home', restaurants_path, :class => 'nav-link' %>
</nav>

 <div class="container">
    <h2><%= @restaurant.name %></h2>
    <p>Address: <%= @restaurant.address %></p>
    <p>Phone Number: <%= @restaurant.phone_number %></p>
    <p>Category: <%= @restaurant.category %></p>
    <p>Created at: <%= @restaurant.created_at %></p>
    <p>Updated at: <%= @restaurant.updated_at %></p>
    <hr>

    <!-- <h3 style="color: green;">Reviews</h3> -->
    <h3 style="color: green;"><%= @reviews.count > 0 ? "Reviews" : ""%></h3>
    <% @reviews.each do |review| %>
      <p>Review date: <%= review.created_at %></p>
      <p>Rating: <%= review.rating %></p>
      <p>Content: <%= review.content %></p>
      <hr>
    <% end %>
</div>



