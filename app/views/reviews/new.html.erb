 <div class="container w-50 mt-4">
  <h2>Add a new review for <%= @restaurant.name %></h2>
  <br>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= f.submit "add a review", class: "btn btn-primary" %>
  <% end %>
 </div>

